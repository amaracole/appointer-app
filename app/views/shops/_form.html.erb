
<%= simple_form_for(@shop) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: "Shop name" %>
    <%= f.input :address %>
    <%= f.input :description, label: "Please provide a short description"%>
    <%= f.input :availability, label: "Opening times" %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
    <%= f.input :capacity, label: "How many people can fit in your shop?" %>
    <label class="btn btn-outline-warning mb-3" id="photo-submit">
      Add a photo!
      <span style="display:none;">
        <%= f.input :photo, as: :file %>
      </span>
    </label>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-warning" %>
  </div>
<% end %>
