
<%= simple_form_for(@shop) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: "Shop name" %>
    <%= f.input :address %>
    <%= f.input :description, label: "Please provide a short description"%>
    <%= f.input :availability, label: "Opening times" %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
    <%= f.input :capacity, label: "How many people can fit in your shop?" %>
    <%= f.input :photo, input_html: { class: 'd-none' , id: 'photo-input' }, label_html: { class: 'upload-photo' },
      label: 'ðŸ“· Upload a photo' %>
    <div class="mb-3">
      <%= image_tag "" , width: 300, class: "hidden", id: "photo-preview" %>
    </div>

