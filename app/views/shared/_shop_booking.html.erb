<div class="shop-booking-form border mt-3 p-5">
  <h4>Click & Meet!</h4>
  <% if policy(Booking).create? %>
    <%= simple_form_for([@shop, @booking]) do |f| %>
      <%= f.input :date, as: :string, input_html: {class: "datepicker"}, label: "Date and Time" %>
      <!-- <%= f.input :comment, label: "Comment" %> -->
      <%= f.submit "Book", class: "btn btn-warning", id: "submit" %>
    <% end %>
  <% end %>
</div>

