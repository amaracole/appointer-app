    <%= image_tag "logo.jpg", class:"rounded-circle" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Appointments", "/", class: "nav-link border mr-1 btn btn-outline-warning" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://scontent-muc2-1.xx.fbcdn.net/v/t1.0-9/179166_654131021279081_960948779_n.jpg?_nc_cat=102&ccb=1-3&_nc_sid=09cbfe&_nc_ohc=9wqsNePfySAAX_z-6Js&_nc_ht=scontent-muc2-1.xx&oh=179733b6fa61687b911c3d0ebdf66908&oe=60881C75", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
